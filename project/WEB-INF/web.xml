<?xml version="1.0" encoding="ISO-8859-1"?>
		<web-app
		xmlns="http://java.sun.com/xml/ns/javaee"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
		version="3.0">
 		<!-- Define servlet-mapped and path-mapped example filters -->

            <servlet>
                <servlet-name>reg_form</servlet-name>
                <servlet-class>reg_form</servlet-class>
            </servlet>
            
            <servlet-mapping>
                <servlet-name>reg_form</servlet-name>
                <url-pattern>/reg_form</url-pattern>
            </servlet-mapping>
            
            <servlet>
                <servlet-name>login</servlet-name>
                <servlet-class>login</servlet-class>
            </servlet>
            
            <servlet-mapping>
                <servlet-name>login</servlet-name>
                <url-pattern>/login</url-pattern>
            </servlet-mapping>

            <servlet>
                <servlet-name>forget_pass</servlet-name>
                <servlet-class>forget_pass</servlet-class>
            </servlet>
            
            <servlet-mapping>
                <servlet-name>forget_pass</servlet-name>
                <url-pattern>/forget_pass</url-pattern>
            </servlet-mapping>

            <servlet>
                <servlet-name>logout</servlet-name>
                <servlet-class>logout</servlet-class>
            </servlet>
            
            <servlet-mapping>
                <servlet-name>logout</servlet-name>
                <url-pattern>/logout</url-pattern>
            </servlet-mapping>
            <servlet>
                <servlet-name>room</servlet-name>
                <servlet-class>room</servlet-class>
            </servlet>
            
            <servlet-mapping>
                <servlet-name>room</servlet-name>
                <url-pattern>/room</url-pattern>
            </servlet-mapping>


		</web-app>